@foreach (var item in Model)
{

    if (item.Type.ToString().ToLower() == "error")
    {
        <script>
            $(document).ready(function () {
                toastr.error('@item.ShortDesc', '@item.Title');
             });
        </script>
    }

    if (item.Type.ToString().ToLower() == "info")
    {
        <script>
            $(document).ready(function () {
                toastr.info('@item.ShortDesc', '@item.Title');
             });
        </script>
    }

    if (item.Type.ToString().ToLower() == "warning")
    {
        <script>
            $(document).ready(function () {
                toastr.warning('@item.ShortDesc', '@item.Title');
             });
        </script>
    }

    if (item.Type.ToString().ToLower() == "success")
    {
        <script>
            $(document).ready(function () {
                toastr.success('@item.ShortDesc', '@item.Title');
             });
        </script>
    }
    
    if (item.Type.ToString().ToLower() == "question")
    {
        <script>
            $(document).ready(function () {
                toastr.question('@item.ShortDesc', '@item.Title');
             });
        </script>
    }
    //TempData["Title"] = item.Title;
    //TempData["Message"] = item.ShortDesc;
    //TempData["Type"] = item.Type;
}
